#!/usr/bin/env bash

set -e
set -o pipefail

ASDF_INSTALL_TYPE=${ASDF_INSTALL_TYPE:-version  }
[ -n "$ASDF_INSTALL_VERSION" ] || (>&2 echo 'Missing ASDF_INSTALL_VERSION' && exit 1)
[ -n "$ASDF_INSTALL_PATH" ] || (>&2 echo 'Missing ASDF_INSTALL_PATH' && exit 1)

install() {
  local install_type=$1
  local version=$2
  local install_path=$3
  local bin_install_path="$install_path/bin"
  local download_url="$(get_download_url $version)"

  mkdir -p "${bin_install_path}"

  local binary="oc.tar.gz"

  echo "Downloading OpenShift Client ${version} from ${download_url} to ${bin_install_path}"  
  install_executable $download_url $bin_install_path $binary

}

install_executable() {
  local download_url=$1
  local path=$2
  local binary=$3
  wget "$download_url" -O "${path}/${binary}"
  cd ${path} && tar xzfv ${path}/${binary} **/oc --strip 1 && cd -
  rm -rf ${bin_install_path}/${binary}
}

get_arch() {
  local platform=""
  [ "Linux" = "$(uname)" ] && platform="linux" || platform="darwin"
  echo "${platform}"
}

get_hash() {
  tag="$1"
  tags_path=https://api.github.com/repos/openshift/origin/git/refs/tags/${tag}
  cmd="curl -s"
  
  if [ -n "$GITHUB_API_TOKEN" ]; then
    cmd="$cmd -H 'Authorization: token $GITHUB_API_TOKEN'"
  elif [ -n "$OAUTH_TOKEN" ]; then
    cmd="$cmd -H 'Authorization: token $OAUTH_TOKEN'"
  fi

  hashes=$(eval $cmd $tags_path | sed -n -e '/object/,$p' | grep -oE "url\": \"[^\"]*\"" | sed 's/url\": *\"//;s/\"//')
  hash=$(eval $cmd $hashes | sed -n -e '/object/,$p' | grep -oE "sha\":\s?\".*\"," | sed 's/sha\": *\"//;s/\",//')

  echo ${hash:0:7}
}

get_download_url() {
  local version="$1"
  local filename=""
  hash=$(get_hash "$version")
  platform=$(get_arch)
  filename="openshift-origin-client-tools-${version}-${hash}-${platform}-64bit.tar.gz"
  echo "https://github.com/openshift/origin/releases/download/${version}/${filename}"
}

install $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
